<Window x:Class="lilMess.Server.Views.StatisticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatisticsView" Height="364" Width="522"
        DataContext="{Binding Statistics, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="149*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding StatisticsModel.IncomingTraffic}" Grid.Row="0"/>
        <TextBlock Text="{Binding StatisticsModel.OutcomingTraffic}" Grid.Row="1"/>
    </Grid>
</Window>